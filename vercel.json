{
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/collect-videos",
      "schedule": "0 21 * * *"
    },
    {
      "path": "/api/share-posts?action=collect&refresh=true",
      "schedule": "0 22 * * 0"
    },
    {
      "path": "/api/videos?action=cleanup",
      "schedule": "0 20 * * *"
    }
  ]
}
