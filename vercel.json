{
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/sitemap.xml", "destination": "/api/blog?action=sitemap" },
    { "source": "/blog/:slug", "destination": "/api/blog?slug=:slug" },
    { "source": "/blog", "destination": "/api/blog" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/collect-videos",
      "schedule": "0 21 * * *"
    },
    {
      "path": "/api/share-posts?action=collect&refresh=true",
      "schedule": "0 22 * * 0"
    },
    {
      "path": "/api/videos?action=cleanup",
      "schedule": "0 20 * * *"
    },
    {
      "path": "/api/blog-generate",
      "schedule": "0 3 * * 1,4"
    }
  ]
}
